/* 拓展 */
.goodsLayout .wrapper {
  background: #fff;
  padding: 30rpx;
  border-radius: 30rpx;
}
.goodsLayout .wrapper .list {
  margin: 20rpx 0;
}
.goodsLayout .wrapper .list .row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  justify-content: flex-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.goodsLayout .wrapper .list .row .left {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goodsLayout .wrapper .list .row .left .img {
  width: 40rpx;
  height: 40rpx;
}
.goodsLayout .wrapper .list .row .right .small {
  font-size: 20rpx;
  color: #a7a7a7;
  position: relative;
}
.goodsLayout .wrapper .list .row .right .small::after {
  content: "";
  position: absolute;
  width: 50rpx;
  height: 2rpx;
  background: #a7a7a7;
  left: 0;
  top: 50%;
}
.goodsLayout .wrapper .total {
  font-size: 20rpx;
  color: #a7a7a7;
  display: flex;
  justify-content: space-between;
  align-items: center;
  justify-content: flex-end;
  align-items: center;
}
.goodsLayout .wrapper .total .big {
  font-size: 34rpx;
  font-weight: bold;
  color: #000;
  margin-left: 10rpx;
}

